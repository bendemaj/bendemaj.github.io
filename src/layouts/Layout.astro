---
import Header from "../components/Header.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@fontsource/inter";
import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags title={title} />

  <body
    class="mx-auto flex min-h-screen max-w-[670px] flex-col gap-9 bg-neutral-900 px-10 py-8 text-md text-neutral-400 md:gap-9 md:py-8"
  >
    <Header />
    
    <slot />
    <style is:global>
      html {
        font-family: 'Inter', sans-serif;
      }
    </style>
  </body>
</html>
